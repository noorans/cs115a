<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/toplabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:src="@drawable/bluerectangle" />

        <TextView
            android:id="@+id/sugarAnalysisTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sugar_analysis"
            android:layout_alignLeft="@id/toplabel"
            android:layout_alignTop="@id/toplabel"
            android:layout_alignRight="@id/toplabel"
            android:layout_alignBottom="@id/toplabel"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:textSize="25dp"/>

        <ImageView
            android:id="@+id/whiteLineTopLabel"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignLeft="@id/toplabel"
            android:layout_alignTop="@id/toplabel"
            android:layout_alignRight="@id/toplabel"
            android:layout_alignBottom="@id/toplabel"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="43dp"
            android:layout_marginRight="-2dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/whiteline1" />

        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/toplabel"
            android:layout_alignRight="@id/toplabel"
            android:layout_alignBottom="@id/toplabel"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/settings" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/toplabel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-30dp"
            android:adjustViewBounds="true"
            android:src="@drawable/bluerectangle" />

        <ImageView
            android:id="@+id/progressIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginRight="290dp"
            android:layout_marginTop="1.5dp"
            android:clickable="true"
            android:onClick="clickProgress"
            android:src="@drawable/progreschart1" />

        <TextView
            android:id="@+id/progressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="28dp"
            android:text="@string/progress_label"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:clickable="true"
            android:onClick="clickProgress"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bmiIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginTop="-1dp"
            android:layout_marginRight="102dp"
            android:src="@drawable/bmiicon1" />

        <TextView
            android:id="@+id/bmiLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginLeft="141dp"
            android:layout_marginTop="27.8dp"
            android:text="@string/bmi_label"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bellIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginLeft="80dp"
            android:onClick="clickBMI"
            android:layout_marginTop="-1.4dp"
            android:src="@drawable/bellicon1" />

        <TextView
            android:id="@+id/bellLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="27.8dp"
            android:text="@string/bell_label"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/contactIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="-1dp"
            android:src="@drawable/usericon1" />

        <TextView
            android:id="@+id/contactLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="27.8dp"
            android:text="@string/contact_label"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"/>


    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/beforeBreakfast"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Before Breakfast"
            android:textSize="21sp"
            app:layout_constraintEnd_toStartOf="@+id/bbButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/bbBMI"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:ems="10"
            android:hint="BMI here"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toStartOf="@+id/bbButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/beforeBreakfast" />

        <TextView
            android:id="@+id/afterBreakfast"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="After Breakfast"
            android:textSize="21sp"
            app:layout_constraintEnd_toStartOf="@+id/abButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bbBMI" />

        <EditText
            android:id="@+id/abBMI"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="BMI here"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toStartOf="@+id/abButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/afterBreakfast" />

        <TextView
            android:id="@+id/beforeLunch"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Before Lunch"
            android:textSize="21sp"
            app:layout_constraintEnd_toStartOf="@+id/blButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/abBMI" />

        <EditText
            android:id="@+id/blBMI"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="BMI here"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toStartOf="@+id/blButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/beforeLunch" />

        <TextView
            android:id="@+id/afterLunch"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="After Lunch"
            android:textSize="21sp"
            app:layout_constraintEnd_toStartOf="@+id/blButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blBMI" />

        <EditText
            android:id="@+id/alBMI"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="BMI here"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toStartOf="@+id/alButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/afterLunch" />

        <TextView
            android:id="@+id/beforeDinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Before Dinner"
            android:textSize="21sp"
            app:layout_constraintEnd_toStartOf="@+id/alButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alBMI" />

        <EditText
            android:id="@+id/bdBMI"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="BMI here"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toStartOf="@+id/bdButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/beforeDinner" />

        <TextView
            android:id="@+id/afterDinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="After Dinner"
            android:textSize="21sp"
            app:layout_constraintEnd_toStartOf="@+id/adButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bdBMI" />

        <EditText
            android:id="@+id/adBMI"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="BMI here"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toStartOf="@+id/adButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/afterDinner" />

        <TextView
            android:id="@+id/beforeWorkout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Before Workout"
            android:textSize="21sp"
            app:layout_constraintEnd_toStartOf="@+id/bwButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adBMI" />

        <EditText
            android:id="@+id/bwBMI"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="BMI here"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toStartOf="@+id/bwButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/beforeWorkout" />

        <TextView
            android:id="@+id/afterWorkout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="After Workout"
            android:textSize="21sp"
            app:layout_constraintEnd_toStartOf="@+id/awButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bwBMI" />

        <EditText
            android:id="@+id/awBMI"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:ems="10"
            android:hint="BMI here"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/awButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/afterWorkout" />

        <Button
            android:id="@+id/bbButton"
            android:layout_width="163dp"
            android:layout_height="74dp"
            android:text="Submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/beforeBreakfast"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/abButton"
            android:layout_width="163dp"
            android:layout_height="74dp"
            android:text="Submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/afterBreakfast"
            app:layout_constraintTop_toBottomOf="@+id/bbButton" />

        <Button
            android:id="@+id/blButton"
            android:layout_width="163dp"
            android:layout_height="74dp"
            android:text="Submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/beforeLunch"
            app:layout_constraintTop_toBottomOf="@+id/abButton" />

        <Button
            android:id="@+id/alButton"
            android:layout_width="163dp"
            android:layout_height="74dp"
            android:text="Submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/afterLunch"
            app:layout_constraintTop_toBottomOf="@+id/blButton" />

        <Button
            android:id="@+id/bdButton"
            android:layout_width="163dp"
            android:layout_height="74dp"
            android:text="Submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/beforeDinner"
            app:layout_constraintTop_toBottomOf="@+id/alBMI" />

        <Button
            android:id="@+id/adButton"
            android:layout_width="163dp"
            android:layout_height="74dp"
            android:text="Submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/afterDinner"
            app:layout_constraintTop_toBottomOf="@+id/bdBMI" />

        <Button
            android:id="@+id/bwButton"
            android:layout_width="163dp"
            android:layout_height="74dp"
            android:text="Submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/beforeWorkout"
            app:layout_constraintTop_toBottomOf="@+id/adBMI" />

        <Button
            android:id="@+id/awButton"
            android:layout_width="163dp"
            android:layout_height="74dp"
            android:layout_marginBottom="2dp"
            android:text="Submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/afterWorkout"
            app:layout_constraintTop_toBottomOf="@+id/bwBMI" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>