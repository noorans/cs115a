<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/toplabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:src="@drawable/bluerectangle" />

        <TextView
            android:id="@+id/sugarAnalysisTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sugar_analysis"
            android:layout_alignLeft="@id/toplabel"
            android:layout_alignTop="@id/toplabel"
            android:layout_alignRight="@id/toplabel"
            android:layout_alignBottom="@id/toplabel"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:textSize="25dp"/>

        <ImageView
            android:id="@+id/whiteLineTopLabel"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignLeft="@id/toplabel"
            android:layout_alignTop="@id/toplabel"
            android:layout_alignRight="@id/toplabel"
            android:layout_alignBottom="@id/toplabel"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="43dp"
            android:layout_marginRight="-2dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/whiteline1" />

        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/toplabel"
            android:layout_alignRight="@id/toplabel"
            android:layout_alignBottom="@id/toplabel"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/settings" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/toplabel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:adjustViewBounds="true"
            android:src="@drawable/bluerectangle" />

        <ImageView
            android:id="@+id/progressIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginRight="290dp"
            android:layout_marginTop="1.5dp"
            android:clickable="true"
            android:onClick="clickProgress"
            android:src="@drawable/progreschart1" />

        <TextView
            android:id="@+id/progressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="28dp"
            android:text="@string/progress_label"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:clickable="true"
            android:onClick="clickProgress"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bmiIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginTop="-1dp"
            android:layout_marginRight="102dp"
            android:src="@drawable/bmiicon1" />

        <TextView
            android:id="@+id/bmiLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginLeft="141dp"
            android:layout_marginTop="27.8dp"
            android:text="@string/bmi_label"
            android:onClick="clickBMI"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bellIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="-1.4dp"
            android:src="@drawable/bellicon1" />

        <TextView
            android:id="@+id/bellLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="27.8dp"
            android:text="@string/bell_label"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/contactIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="-1dp"
            android:src="@drawable/usericon1" />

        <TextView
            android:id="@+id/contactLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/toplabel2"
            android:layout_alignRight="@id/toplabel2"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="27.8dp"
            android:text="@string/contact_label"
            android:textColor="@color/colorWhite"
            android:textSize="15dp"
            android:textStyle="bold"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/circle"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/circle" />

        <com.daasuu.cat.CountAnimationTextView
            android:id="@+id/result"
            android:layout_width="147dp"
            android:layout_height="177dp"
            android:layout_alignLeft="@+id/circle"
            android:layout_alignTop="@+id/circle"
            android:layout_alignRight="@+id/circle"
            android:layout_alignBottom="@+id/circle"
            android:layout_marginTop="-30dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:paddingTop="25dp"
            android:textColor="@color/colorBlue"
            android:textSize="70dp" />

    </RelativeLayout>
    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorBlue"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/weight"
        android:textColor="@color/colorBlue"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorLightBlue"
        android:backgroundTint="@color/colorBlue"
        android:ems="6"
        android:inputType="number|numberDecimal"
        android:textSize="15dp" />

    <TextView
        android:textColor="@color/colorBlue"
        android:text="@string/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorLightBlue"
        android:ems="6"
        android:backgroundTint="@color/colorBlue"
        android:inputType="number|numberDecimal"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/calculateBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/colorBlue"
        android:onClick="calculateBMI"
        android:padding="20dp"
        android:text="@string/calculateBMI"
        android:textColor="@color/colorWhite" />


</LinearLayout>
